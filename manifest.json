{
    "name"            : "BEM inspector",
    "version"         : "0.1",
    "description"     : "Inspector for BEM",
    "content_scripts" : [
        {
            "matches" : ["<all_urls>"],
            "css"     : ["bem-inspector.css"],
            "js"      : ["jquery.js", "bem-inspector.js"],
            "run_at"  : "document_end"
        }
    ],
    "devtools_page"   : "devtools.html",
    "permissions"     : ["tabs"],
    "background"      : { "scripts" : ["background.js"] }
}