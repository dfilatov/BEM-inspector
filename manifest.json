{
    "name"            : "BEM inspector",
    "version"         : "0.1",
    "description"     : "Inspector for BEM",
    "browser_action"  : {
        "default_icon"  : "icon.png",
        "default_title" : "enable BEM inspector"
    },
    "content_scripts" : [
        {
            "matches" : ["<all_urls>"],
            "css"     : ["bem-inspector.css"],
            "js"      : ["jquery.js", "bem-inspector.js"],
            "run_at"  : "document_end"
        }
    ]
}